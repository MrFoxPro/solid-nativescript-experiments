{
   "compilerOptions": {
      "module": "esnext",
      "target": "ESNext",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "noEmitHelpers": true,
      "noEmitOnError": false,
      "skipLibCheck": true,
      "noEmit": true,
      "lib": [
         "ESNext"
      ],
      "jsx": "preserve",
      "baseUrl": ".",
      "paths": {
         "~/*": [
            "app/*"
         ],
         "@/*": [
            "app/*"
         ]
      },
   },
   "files": ["./app/solid-native-jsx.ts", "./app/nativescript-jsx.ts"],
   "include": [
      "app/**/*"
   ],
   "exclude": [
      "node_modules",
      "platforms"
   ]
}
